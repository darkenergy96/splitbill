<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/css/materialize.css">
    <link rel="stylesheet" href="/css/form.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>signup</title>
</head>
<body>

    <div style="padding: 10px;background-color:#00bcd4">
         <h5  style="color:white">SPLITBILL</h5>
    </div>
    <br>
    <div class="row box">
            <% errors.forEach(function(error) { %>
                <p class="error" role="alert">
                <%= error %>
                </p>
                <% }) %>
    <div class="col s4 offset-s4 z-depth-1">
    <form id="auth-form" method="POST" action="/signin" class="col s12">
        <div class="row">
        <div class="input-field col s12">
          <input name="email" id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="password" id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="col s12">
      <input id="submit-button" class="btn waves-effect" type="submit" value="signin" style="background-color:#ff4081">
      </div>
    </form>
    <p style="text-align:center">New User?<a href="/signup"> signup here</a></p>
    <p style="text-align:center"><a href="/forgot-password">Forgot Password?</a></p>
    <div class="col s6 offset-s3">
        <a href="/auth/google"><img src="img/google-signin.png" class="responsive-img"/></a>
    </div>
    <!-- <div class="col s6 offset-s3">
        <a href="/auth/facebook"><img src="img/facebook-signin.png" class="responsive-img"/></a>
    </div> -->
    </div>
  </div>
  <script src="/js/jquery.js" type="text/javascript"></script>
  <script src="/js/materialize.js" type="text/javascript"></script>
  <script src="/js/auth.js" type="text/javascript"></script>
</body>
</html>